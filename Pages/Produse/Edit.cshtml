@page
@model Site_Baras_Andrei.Pages.Produse.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produs.ID" />
            <div class="form-group">
                <label asp-for="Produs.DenumireProdus" class="control-label"></label>
                <input asp-for="Produs.DenumireProdus" class="form-control" />
                <span asp-validation-for="Produs.DenumireProdus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.IngredientID" class="control-label">DenumireIngredient</label>
                <select asp-for="Produs.IngredientID" class="form-control" asp-items="ViewBag.IngredientID">
                </select>
                <span asp-validation-for="Produs.IngredientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.ValoareNutritionalaID" class="control-label">Kcal</label>
                <select asp-for="Produs.ValoareNutritionalaID" class="form-control" asp-items="ViewBag.ValoareNutritionalaID">
                </select>
                <span asp-validation-for="Produs.ValoareNutritionalaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
